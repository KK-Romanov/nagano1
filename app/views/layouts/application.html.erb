<!DOCTYPE html>
<html>
  <head>
    <title>NAGANO CAKE</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
   <header>
     <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
       <div class="container ">
         <a class="text-white navbar-brand" href="/"><span>NagaNo CAKE</span></a>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
           <ul class="navbar-nav ml-auto">
            <% if customer_signed_in? %>
              <li>
                  <a class="text-white navbar-brand">
                  ようこそ、<%= current_customer.last_name %>さん！
                  </a>
                <%= link_to customers_my_page_path, class: "text-white navbar-brand" do %>
                 <i class="fas fa-book-open"></i>マイページ
                <% end %>
              </li>
              <li>
                <%= link_to lot_path, class: "text-white navbar-brand" do  %>
                  <i class="fal fa-birthday-cake fa-sm" style="color: #111212;"></i>
                 商品一覧
               </li>
                 <% end %>
               <li>
                <%= link_to cart_items_path, class: "text-white navbar-brand" do %>
                 <i class="fas fa-users"></i>カート
                <% end %>
               </li>
               <li>
                <%= link_to destroy_customer_session_path, method: :delete, class: "text-white navbar-brand" do %>
                 <i class=" fas fa-sign-out-alt"></i>ログアウト
                <% end %>
               </li>
             
             <% elsif admin_signed_in? %>
               <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                 <ul class="navbar-nav ml-auto">
            　     <li>
                   <%= link_to admin_items_path, class: "text-white navbar-brand" do  %>
                    <i class="fal fa-birthday-cake fa-sm" style="color: #111212;"></i>商品一覧
                    <% end %>
                    <%= link_to admin_customers_path, class: "text-white navbar-brand" do %>会員一覧
                      <%end %>
                        <%= link_to  top_path, class: "text-white navbar-brand" do %>注文履歴一覧
                      <%end %>
                        <%= link_to  admin_genres_path, class: "text-white navbar-brand" do %>ジャンル一覧
                      <%end %>
                     <%= link_to destroy_admin_session_path, method: :delete, class: "text-white navbar-brand" do %>
                      <i class=" fas fa-sign-out-alt"></i>ログアウト
            　         <% end %>
                   </li>
                  </ul> 
                </div>
               </nav>
                
            <% else %>
             <li>
               <%= link_to about_path,  class: "text-white navbar-brand" do %>  
                 <i class="fas fa-link"></i>About
             </li>
                <% end %>
             <li>
                <%= link_to lot_path, class: "text-white navbar-brand" do  %>
                 <i class="fal fa-birthday-cake fa-sm" style="color: #111212;"></i>
                 商品一覧
             </li>
                <% end %>
             <li>
                <%= link_to new_customer_registration_path, class: "text-white navbar-brand" do %>
                 <i class="fas fa-user-plus"></i>新規登録
             </li>
                <% end %>
             <li>
                 <%= link_to  new_customer_session_path, class: "text-white navbar-brand" do %>
                  <i class="fas fa-sign-in-alt"></i>ログイン
             </li>
                <% end %>
                <% end %>
               
            </ul>
          </div>
       </div>
     </nav> 
   </header>
    
    <%= yield %>
  </body>
</html>

