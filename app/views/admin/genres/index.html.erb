<div class = "container mt-5">
    <div class="w100">
    <div class="auto"
<h1>ジャンル一覧・追加</h1>
 <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>

<div class= "field">
      
            <div class='form-group'>
                <%= f.label :ジャンル名 %>
                <%= f.text_field :name %>
                <%= f.submit "新規登録", class:"btn btn-success" %></br>
            </div>
</div>
<% end %>

<b>ジャンル</b>
<br>
            <% @genres.each do |genre| %>
            <%= genre.name %>
            <%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %></br>
 <% end %>