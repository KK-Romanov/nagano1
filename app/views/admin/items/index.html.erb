<div class = "containar mt-5">
  
      <h1>商品一覧</h1>
      <span>
           <%= link_to "商品追加", new_admin_item_path, 
            class: "badge rounded-pill bg-dark text-warning" %>
      </span>
<table class = "table">
    <thead>
      <tr>
        <th scope = "col">商品ID</th>
        <th scope = "col">商品名</th>
        <th scope = "col">税抜価格</th>
        <th scope = "col">ジャンル</th>
        <th scope ="col">ステータス</th>
      </tr>
    </thead>
      <tbody>
     <% @items.each do |items| %>
        <tr>
           <td><%= items.id %></td>
           <td><%= link_to admin_item_path(items.id) do %>
              <%= items.name %>
              <% end %>
           </td>
           <td><%= items.price %></td>
           <td><%= items.genre.name %></td>
           <td><% if items.is_active? %>
                   <span>販売中</sapn>
                   <% else %>
                   <span>販売停止中</span>
                   <% end%>
           </td>
        </tr>
      </tbody>
  
     <% end %>
            <table class = "paginate">
              <%= paginate @items %>
            </table>
</div>
   
      
   