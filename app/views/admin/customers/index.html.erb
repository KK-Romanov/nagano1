<div class = "container mt-5">
    
      <h1>会員一覧</h1>
    
        
        
<table class = "table">
    <thead>
      <tr>
        <th scope = "col">会員ID</th>
        <th scope = "col">氏名</th>
        <th scope = "col">メールアドレス</th>
        <th scope = "col">ステータス</th>
      </tr>
    </thead>
      <tbody>         
        <% @customers.each do |customer| %>
        <tr>
           <td><%= customer.id %></td>
           <td><%= link_to  admin_customer_path(customer.id) do %>
              <%= customer.first_name %>
              <%= customer.last_name %>
              <% end %>
           </td>
           <td><%= customer.email %></td>
           <td><% if customer.is_deleted? %></td>
           <span>退会</span>
               <% else %>
            <span>有効有効</span>
               <% end %>
        </tr>
      </tbody>
  
     <% end %>
</div>