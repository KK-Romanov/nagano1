<div class = "cantainer mt-5">
<h1><%= @customer.first_name %>
    <%= @customer.last_name %>
     さんの会員詳細</h1>

     <tr>
          <th><b>会員ID</b></th>
            <td><%= @customer.id %></td>
            <br>
          <th><b>氏名</b></th>
            <td><%= @customer.last_name %>
                <%= @customer.first_name %></td>
             <br>
          <th><b>カナ</b></th>
            <td><%= @customer.last_name_kana %>
            <%= @customer.first_name_kana %></td>
             <br>
          <th><b>郵便番号</b></th>
             <td><%= @customer.postal_code %></td>
              <br>
          <th><b>住所</b></th>
             <td><%= @customer.address %></td>
              <br>
          <th><b>電話番号</b></th>
             <td><%= @customer.telephone_number %></td>
              <br>
          <th><b>メールアドレス</b></th>
             <td><%= @customer.email %></td>
              <br>
           <th><b>会員ステータス</b></th>
             <td><% if @customer.is_deleted? %></td>
             <span>退会</span>
               <% else %>
            <span>有効</span>
               <% end %>
     </tr>
      <br>
     <%= link_to edit_admin_customer_path, class: "badge rounded-pill bg-dark text-warning" do %>
     編集する
     <% end %>