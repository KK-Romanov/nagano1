
<div class = "containar mt-5">
<h2>商品一覧<span>(全<%= @items.count %>件)</h2>
            <div class="row mt-3 mb-3 text-center text-xs-center text-sm-center text-md-left">
            <% @items.each do |item| %>
            <tr>
                 <b>  
                <td>  
                 <div class="col-xs-10 col-sm-10 col-md-6 col-lg-3">
                    <div class = "col d-flex">
                    <%=link_to item_path(item.id) do %>
                    <%= image_tag item.get_image, class: "img-thumbnail", size: "200x200" %>
                    <% end %></td>
                  <br>
                    <td><%= item.name %></td>
                  <br>
                    <td>￥<%= item.price %></td>
                 <br>
                </b>
            <% end %>
                </div>
            </tr>
            <%= paginate @items %>
  </div>
  
  