<div class="container mt-5">
    <h2>配送先登録/一覧</h2>
<div class="row">
 <div class="col-xs-8">
 <table class="table addresses-table">
  <thead>
       <%= form_with model: @address, url: addresses_path, method: :post do |f| %>
     <tr>
       <th>
          <%= f.label :"郵便番号（ハイフンなし）",class: "col-xs-3" %>
       </th>
       <td>
          <%= f.text_field :postal_code, class: "col-xs-4" %>
       </td>
     </tr>
       <br>
       <tr>
         <th>
           <%= f.label :"住所", class: "col-xs-3" %>
         </th>
         <td>
            <%= f.text_field :address, class: "col-xs-7" %>
         </td>
        </tr>
      <br>
        <tr>
          <th>
            <%= f.label :"宛名", class: "col-xs-3" %>
          </th>
           <td>
            <%= f.text_field :name, class: "col-xs-4" %>
          </td>
       </tr>
      <br>
       <tr>
         <th></th>
          <td>
            <%= f.submit '新規登録',class: "col-xs-2 pull-right btn-primary" %>
            <% end %>
          </td>
       </tr>
  </thead>
 </table>
 
   <table class = "table table-hover">
      <thead>
        <tr><b>
          <th scope = "col">郵便番号</th>
          <th scope = "col">住所</th>
          <th scope = "col">宛名</th>
          <th scope = "col"></th>
           </b>
        </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
      <tr>
      <td><%= address.postal_code %></td>
      <td class="text-left"><%= address.address %></td>
      <td class="text-left"><%= address.name %></td>
      <td><%= link_to "編集する", edit_address_path(address), class: "btn btn-primary" %>
      <%= link_to "削除する",   address_path(address), method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure?"} %>
      </td>
      </tr>
      <% end %>
    </tbody>
   </table>
 </div>
</div>